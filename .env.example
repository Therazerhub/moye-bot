# Required Telegram Bot Settings
BOT_TOKEN=your_bot_token_here
ADMIN_ID=your_telegram_user_id

# Required Telegram API (for Telethon)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Optional: StashDB / FansDB API (for metadata lookup)
STASHDB_API_KEY=your_stashdb_api_key_here
STASHDB_GRAPHQL_URL=https://stashdb.org/graphql
FANSDB_API_KEY=your_fansdb_api_key_here
FANSDB_GRAPHQL_URL=https://fansdb.cc/graphql

# ============================================================
# PHASE 2 FEATURES - Auto Rename & Organization
# ============================================================

# Auto Rename Settings
AUTO_RENAME_ENABLED=true
AUTO_RENAME_THRESHOLD=0.75
AUTO_RENAME_FORMAT={performer} - {title}.{ext}

# Studio Organization Settings
ORGANIZE_BY_STUDIO=true
ORGANIZE_STUDIO_SUBFOLDERS=true

# ============================================================
# PHASE 2 FEATURES - Duplicate Detection
# ============================================================

# Duplicate Detection Settings
DUPLICATE_DETECTION_ENABLED=true
DUPLICATE_HASH_THRESHOLD=8
DUPLICATE_VIDEO_SAMPLE_SECS=5
DUPLICATE_MIN_DURATION_DIFF=5

# ============================================================
# PHASE 2 FEATURES - Feedback Loop (Learning)
# ============================================================

# Feedback Loop Settings
FEEDBACK_LOOP_ENABLED=true
FEEDBACK_MIN_CORRECTIONS=3
FEEDBACK_AUTO_APPLY_THRESHOLD=0.9

# ============================================================
# Database Paths
# ============================================================
DB_PATH=stash.db
PERFORMER_DB_PATH=performer_db.db
DUPLICATE_DB_PATH=duplicate_detection.db
API_CACHE_PATH=api_cache.db
FEEDBACK_DB_PATH=feedback.db

# ============================================================
# Logging & Debug
# ============================================================
DEBUG_MATCHING=false
LOG_LEVEL=INFO
